<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="16dp"
    android:background="@drawable/bg_white_rounded_all"
    android:elevation="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/product_image"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/image__2"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeWidth="1dp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_name"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/product_price"
        android:layout_toEndOf="@+id/product_image"
        android:ellipsize="end"
        android:fontFamily="@font/nunito_bold"
        android:lines="1"
        android:text="Product Name"
        android:textColor="@color/text_color" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_price"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nunito_bold"
        android:text="$50.00"
        android:textColor="@color/text_price" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/category_name"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/product_image"
        android:fontFamily="@font/nunito_regular"
        android:text="Lorem Ipsum"
        android:textColor="@color/text_light" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_type"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_name"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/product_image"
        android:ellipsize="end"
        android:fontFamily="@font/nunito_bold"
        android:lines="1"
        android:text="Hybrid"
        android:textColor="@color/text_color" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/quantity_text"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_type"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/product_image"
        android:fontFamily="@font/nunito_regular"
        android:text="Quantity: "
        android:textColor="@color/text_light" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_quantity"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_type"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/quantity_text"
        android:fontFamily="@font/nunito_bold"
        android:text="2"
        android:textColor="@color/text_color" />


    <RelativeLayout
        android:id="@+id/button_check"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-5dp"
        android:background="@drawable/ic_check_background">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/checkDetail"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/nunito_medium"
            android:text="Check"
            android:textColor="@color/white" />


    </RelativeLayout>


</RelativeLayout>